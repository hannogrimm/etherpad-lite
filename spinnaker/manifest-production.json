apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: etherpad
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: etherpad
        env: production
      name: etherpad
    spec:
      containers:
        - env:
            - name: VERSION
              value: production
          image: gcr.io/ccc-etherpad-spinnakerdeploy/github.com/hannogrimm/etherpad-lite:latest
          imagePullPolicy: Always
          name: etherpad-lite
          ports:
            - containerPort: 9001
              protocol: TCP

